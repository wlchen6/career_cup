#include <iostream>
#include <cstring>

using namespace std;

void reverse(char* str)
{
	if (!str) return;
	for (char *str_end = str+strlen(str) - 1; str < str_end; ++str, --str_end)
	{
		swap(*str, *str_end);
	}
	// *str_end can also be defined as char *str_end=strchr(str,NULL)-1;
}

int main()
{
	char s[] = "1234567";
	reverse(s);
	cout << s << endl;
	return 0;
}
